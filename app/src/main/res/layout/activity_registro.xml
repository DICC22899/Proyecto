<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:padding="20dp"
android:orientation="vertical"
tools:context=".RegistroActivity">

<EditText
    android:id="@+id/UsuarioL"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="Usuario" />

    <EditText
        android:id="@+id/EmailL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="Email"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/PasswordL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="Password"
        android:inputType="textPassword" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:gravity="bottom"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="285dp"
        android:gravity="top"
        android:orientation="vertical">

        <Switch
            android:id="@+id/swProveedor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Proveedor de Servicio" />

        <LinearLayout
            android:id="@+id/llProveedores"
            android:layout_width="match_parent"
            android:layout_height="285dp"
            android:gravity="top"
            android:orientation="vertical">

            <Switch
                android:id="@+id/swCompania"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Compañia - Transportista" />

            <EditText
                android:id="@+id/CompaniaL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Compañia"
                android:inputType="textPersonName" />

            <Spinner
                android:id="@+id/SpCompania"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:accessibilityHeading="false"
                android:dropDownWidth="match_parent"
                android:isScrollContainer="false"
                android:spinnerMode="dropdown" />

            <EditText
                android:id="@+id/ContactoL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Num. de Contacto"
                android:inputType="phone" />

            <EditText
                android:id="@+id/PlacaL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Placa (V0I345)"
                android:inputType="textPersonName"/>

            <EditText
                android:id="@+id/CodRegistroL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="Codigo de Registro" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/Registrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Registrar Usuarios"
        android:background="@color/colorAccent"
        android:textColor="@android:color/white">

    </Button>

</LinearLayout>

</LinearLayout>