<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Confirmacion"
    android:paddingHorizontal="5dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Presente la siguiente información al cobrador/transportista de la unidad"
            android:layout_marginTop="20dp"
            android:paddingHorizontal="10dp"
            android:textSize="20dp"
            android:textColor="@android:color/white"
            android:background="@color/colorPrimary"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Detalles"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:paddingHorizontal="10dp"
            android:textSize="20dp"
            android:textColor="@android:color/white"
            android:background="@color/colorPrimary"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp">
            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="ID:"
                android:gravity="right"
                />
            <TextView
                android:id="@+id/TextViewID"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp">
            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="Status:"
                android:gravity="right"
                />
            <TextView
                android:id="@+id/TextViewStatus"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp">
            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="Monto:"
                android:gravity="right"
                />
            <TextView
                android:id="@+id/TextViewMonto"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp">
            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="Compañia:"
                android:gravity="right"
                />
            <TextView
                android:id="@+id/TextViewCompania"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp">
            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="Transportista:"
                android:gravity="right"
                />
            <TextView
                android:id="@+id/TextViewTransportista"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp">
            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="Pagado por:"
                android:gravity="right"
                />
            <TextView
                android:id="@+id/TextViewPagado"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Código QR"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:paddingHorizontal="10dp"
            android:textSize="20dp"
            android:textColor="@android:color/white"
            android:background="@color/colorPrimary"
            />

        <ImageView
            android:layout_marginTop="20dp"
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            />



    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>